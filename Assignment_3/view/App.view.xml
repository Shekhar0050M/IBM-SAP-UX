<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
  <App>
    <Page title="Employee Information">
      <VBox>
        <form:SimpleForm id="employeeForm" editable="true" layout="ResponsiveGridLayout" title="Employee Details">
          <Label text="First Name" />
          <Input id="firstNameInput" placeholder="Enter first name" />

          <Label text="Last Name" />
          <Input id="lastNameInput" placeholder="Enter last name" />

          <Label text="Email" />
          <Input id="emailInput" type="Email" placeholder="Enter email" />

          <Button text="Submit" press="onSubmit" />
        </form:SimpleForm>
      </VBox>
    </Page>
  </App>
</mvc:View>
