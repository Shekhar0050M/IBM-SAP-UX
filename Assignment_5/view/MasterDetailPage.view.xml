<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="com.ibm.application.controller.MasterDetailPage"
>
    <!-- <Button
        text="Master Detail Page"
        press=".onClick"
    /> -->
    <List
        items="{products>/products.title}"
        selectionChange="onSelectionChange"
    >
        <items>
            <ObjectListItem
                title="{products>title}"
                type="Active"
            >
                <attributes>
                    <ObjectAttribute
                        title="Description"
                        text="{products>description}"
                    />
                    <ObjectAttribute
                        title="Price"
                        text="{products>price} EUR"
                    />
                    <ObjectAttribute
                        title="Rating"
                        text="{products>rating}"
                    />
                    <ObjectAttribute
                        title="Stock"
                        text="{products>stock}"
                    />
                </attributes>
                <firstStatus>
                    <ObjectStatus
                        text="In Stock"
                        state="{= ${products>stock} > 0 ? 'Success' : 'Error'}"
                    />
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>
