<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="com.ibm.application.controller.App"
>
    <Dialog
        id="registrationDialog"
        title="Registration Page"
    >
        <VBox class="sapUiContentPadding">
            <Label text="Name" />
            <Input value="{/registrationPage/name}" />
            <Label text="Email" />
            <Input
                type="Email"
                value="{/registrationPage/email}"
            />
            <Label text="Password" />
            <Input
                type="Password"
                value="{/registrationPage/password}"
            />
            <Label text="Confirm Password" />
            <Input value="{/registrationPage/confirmPassword}" />
        </VBox>
        <Toolbar>
            <ToolbarSpacer />
            <Button
                text="Login"
                press=".onLogin"
            />
            <Button
                text="Cancel"
                press=".onCancel"
            />
        </Toolbar>
    </Dialog>
</core:FragmentDefinition>
