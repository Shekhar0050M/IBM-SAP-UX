<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="com.ibm.assignment.controller.Main"
>
    <Dialog
        id="simpleFormDialog"
        title="Dialog Title"
    >
        <form:SimpleForm>
            <Title text="Sample form" />
            <Label text="First Name" />
            <Input value="{/firstname}" />
            <Button
                text="Submit"
                press=".onCloseDialog"
            />
        </form:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
