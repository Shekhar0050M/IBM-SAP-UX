<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="com.ibm.assignment.controller.MovieCard"
>
    <!-- <Button text="Click here" /> -->
    <VBox>
        <List
            items="{movies>/movies}"
            selectionChange="onSelectionChange"
        >
            <items>
                <ObjectListItem>
                    <attributes>
                        <ObjectAttribute
                            title="Title"
                            text="{movies>title}"
                        />

                        <ObjectAttribute
                            title="Genres"
                            text="{movies>genres}"
                        />
                        <ObjectAttribute
                            title="Release Year"
                            text="{movies>year}"
                        />
                    </attributes>
                    <firstStatus>
                        <ObjectStatus text="{movies>cast}" />
                    </firstStatus>
                </ObjectListItem>
            </items>
        </List>
    </VBox>
</mvc:View>
